<h2> Advanced Creature Search </h2>

<%= form_with(url: "advanced_search") do |form| %>

<div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
</div>

<div class="field">
    <%= form.label :type %>
    <%= form.select :type, creature_types, { include_blank: true } %>
</div>

<div class="field">
    <%= form.label :subtype %>
    <%= form.text_field :subtype %>
</div>

<div class="field">
    <%= form.label :size %>
    <%= form.select :size, creature_sizes, { include_blank: true } %>
</div>

<div class="field">
    <%= form.label :alignment %>
    <%= form.text_field :alignment %>
</div>

<div class="field">
    <%= form.label :ac %>
    <%= form.text_field :ac %>
</div>

<div class="field">
    <%= form.label :ac_type %>
    <%= form.text_field :ac_type %>
</div>

<div class="field">
    <%= form.label :hp %>
    <%= form.number_field :hp %>
</div>

<div class="field">
    <%= form.label :hp_dice %>
    <%= form.text_field :hp_dice %>
</div>


<h3>Speed</h3>

  <div class="fields-horizontal">
    <div class="field-item flex-10">
      <%= form.label :speed %>
      <%= form.number_field :speed %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :swim %>
      <%= form.number_field :swim %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :burrow %>
      <%= form.number_field :burrow %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :climb %>
      <%= form.number_field :climb %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :fly %>
      <%= form.number_field :fly %>
    </div>
  </div>

  <h3>Stats</h3>

  <div class="fields-horizontal">
    <div class="field-item flex-10">
      <%= form.label :strength %>
      <%= form.number_field :strength %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :dexterity %>
      <%= form.number_field :dexterity %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :constitution %>
      <%= form.number_field :constitution %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :intellect %>
      <%= form.number_field :intellect %>
    </div>

    <div class="field-item flex-10">
      <%= form.label :wisdom %>
      <%= form.number_field :wisdom %>
    </div>

    <div class="field-item flex-10">
      <%= form.label :charisma %>
      <%= form.number_field :charisma %>
    </div>
  </div>

  <h3>Saving Throws</h3>

  <div class="fields-horizontal">
    <div class="field-item flex-10">
      <%= form.label :str_saving %>
      <%= form.number_field :str_saving %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :dex_saving %>
      <%= form.number_field :dex_saving %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :con_saving %>
      <%= form.number_field :con_saving %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :int_saving %>
      <%= form.number_field :int_saving %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :wis_saving %>
      <%= form.number_field :wis_saving %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :chr_saving %>
      <%= form.number_field :chr_saving %>
    </div>
  </div>

  <h3>Senses</h3>

  <div class="fields-horizontal">
    <div class="field-item flex-10">
      <%= form.label :perception %>
      <%= form.number_field :perception %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :blindsight %>
      <%= form.number_field :blindsight %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :darkvision %>
      <%= form.number_field :darkvision %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :tremorsense %>
      <%= form.number_field :tremorsense %>
    </div>
    <div class="field-item flex-10">
      <%= form.label :truesight %>
      <%= form.number_field :truesight %>
    </div>
  </div>

  <div class="field">
    <%= form.label :challenge %>
    <%= form.number_field :challenge %>
  </div>

<div class="actions">
    <%= form.submit "Search" %>
</div>

<%= link_to "Back", creatures_path %>

<% end %>