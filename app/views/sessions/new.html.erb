<h1>Log In</h1>
<%= form_with url: sessions_path, local: true do |form| %>
<div class="field">
  <%= form.label "Username or email" %>
  <%= form.text_field :name %>
</div>
<div class="field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>
<div class="actions">
  <%= form.submit "Log in" %>
</div>
<% end %>
<%= link_to "Sign up", signup_path %>
